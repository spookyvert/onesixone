<h1>Edit Post</h1>
<br>
<br>
<ul>
  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %>
      </li>
    <% end %>
  <% end %>
</ul>

<%= form_for(@post) do |f| %>

<%= f.label :title, "Enter Title" %>
<%= f.text_field :title %><br>
<%= f.label :desc, "Enter Description" %>
<%= f.text_area :desc%><br>
<%= f.label :location, "Enter Location" %>
<%= f.text_field :location%><br>
<input name="post[user_id]" value="<%= @post.id%>" type="hidden">

<%= f.submit %>
<% end %>
