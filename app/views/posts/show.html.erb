<div class="show_content">



<div class="row">
<%= @post.title %>
<%= @post.desc %>
<p> Posted by <%= link_to @post.user.name , user_path(@post.user) %> </p>

</div>
<div class="user_button">
<% if @logged_in_user.id == @post.user_id %>
<br>
  <%= link_to "Edit this Post", edit_post_url(@post)%>
  <%= button_to "Delete this Post", @post, method:"delete" %>
  <br>
<% end %>

</div>
<p>
<%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=17&size=400x300&markers=size:small%7Ccolor:red%7C40.694,-73.9901&key=AIzaSyBScc4pzumdjCf22-UZuIMBPMm77MGvolI", alt: "Map" %>
</p>

</div>
